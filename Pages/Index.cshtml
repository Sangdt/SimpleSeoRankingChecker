@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>SEO Rank Checker</h1>
<form method="post">
    <label>Keywords:</label>
    <input type="text" name="Keywords" />
    <label>URL:</label>
    <input type="text" name="Url" />
    <button type="submit">Search</button>
</form>

@if (Model.SearchResult != null)
{
    <div>
        <h2>Positions</h2>
        @if (Model.SearchResult.Positions.Any())
        {
            <ul>
                @foreach (var position in Model.SearchResult.Positions)
                {
                    <li>@position</li>
                }
            </ul>
        }
    </div>
    <div>
        <h2>URL Found</h2>
        <p>@(Model.SearchResult.IsUrlFound ? "Yes" : "No")</p>
    </div>
}